<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/image_signal_big"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:adjustViewBounds="true"
        android:src="@drawable/signal_big"
        app:layout_constraintBottom_toTopOf="@id/need_network"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.07" />

    <TextView
        android:id="@+id/need_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/need_network"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/no_limit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/no_limit"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/need_network"
        app:layout_constraintWidth_percent="0.45" />

    <TextView
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_plate_connect"
        android:text="@string/connect"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        app:layout_constraintTop_toBottomOf="@id/no_limit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>